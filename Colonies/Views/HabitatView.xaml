<UserControl x:Class="Colonies.Views.HabitatView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Colonies="clr-namespace:Colonies" xmlns:ViewModels="clr-namespace:Colonies.ViewModels"
             xmlns:Views="clr-namespace:Colonies.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" d:DataContext="{d:DesignInstance ViewModels:HabitatViewModel}">

    <UserControl.Resources>
        <Colonies:OrganismToVisibilityConverter x:Key="OrganismToVisibilityConverter" />
    </UserControl.Resources>
    
    <Border BorderBrush="Black" BorderThickness="1, 1, 0, 0">
        <!-- border on left & top of each item -->
        <Grid Height="30" Width="30">
            <Views:EnvironmentView DataContext="{Binding EnvironmentViewModel}"/>
            <Views:OrganismView  Visibility="{Binding OrganismVisibility}"/>
        </Grid>
    </Border>
    
</UserControl>
