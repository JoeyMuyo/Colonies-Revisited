<UserControl x:Class="Colonies.Views.HabitatView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Converters="clr-namespace:Colonies.Converters" 
             xmlns:ViewModels="clr-namespace:Colonies.ViewModels"
             xmlns:Views="clr-namespace:Colonies.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" d:DataContext="{d:DesignInstance ViewModels:HabitatViewModel}">
    
    <Border BorderBrush="#111111" BorderThickness="1, 1, 0, 0">
        <!-- border on left & top of each item -->
        <Grid Height="20" Width="20">
            <Views:EnvironmentView DataContext="{Binding EnvironmentViewModel}"/>
            <Views:OrganismView DataContext="{Binding OrganismViewModel}" Height="10" Width="10"/>
        </Grid>
    </Border>
    
</UserControl>
